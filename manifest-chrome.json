{
  "manifest_version": 3,
  "name": "Quick Access",
  "version": "1.0.0",
  "description": "Компактное расширение для быстрого перехода на подстраницы текущего сайта",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick Access"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "settings.js",
        "content-scripts/tariff-lister.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["settings.js"],
      "matches": ["<all_urls>"]
    }
  ]
}