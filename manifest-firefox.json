{
  "manifest_version": 2,
  "name": "Quick Access",
  "version": "1.0.0",
  "description": "Компактное расширение для быстрого перехода на подстраницы текущего сайта",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Quick Access"
  },
  
  "applications": {
    "gecko": {
      "id": "quick-access@example.com",
      "strict_min_version": "57.0"
    }
  }
}
