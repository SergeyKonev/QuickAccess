{
  "manifest_version": 3,
  "name": "Quick Access",
  "version": "1.3.0",
  "description": "Компактное расширение для быстрого перехода на подстраницы текущего сайта",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick Access"
  },
  "web_accessible_resources": [
    {
      "resources": ["settings.js"],
      "matches": ["<all_urls>"]
    }
  ]
}