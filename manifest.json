{
  "manifest_version": 3,
  "name": "Quick Access",
  "version": "1.3.0",
  "description": "Компактное расширение для быстрого перехода на подстраницы текущего сайта",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://etalon.bitrix24.ru/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick Access"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://jabber.bx/bug_report_page.php",
        "https://jabber.bx/bug_report_page.php"
      ],
      "js": [
        "utils.js",
        "content-scripts/mantis-version-checker.js"
      ]
    },
    {
      "matches": [
        "http://jabber.bx/bug_report_page_vue.php",
        "https://jabber.bx/bug_report_page_vue.php"
      ],
      "js": [
        "content-scripts/mantis-vue-version-checker.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["settings.js"],
      "matches": ["<all_urls>"]
    }
  ]
}